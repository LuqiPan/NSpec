grammar NSpec
  rule expect
    'expect' parens to match_statement numbers
  end

  rule parens
    '(' parens ')' / word
  end

  rule word
    [a-zA-Z]+
  end

  rule to
    [ \t]* 'to' [ \t]*
  end

  rule match_statement
    'be ' matcher ' '
  end

  rule matcher
    'equal'
  end

  rule numbers
    [0-9]+
  end

  rule problems
    word &{ |s| binding.pry; true }
  end
end
