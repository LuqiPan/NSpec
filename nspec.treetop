grammar NSpec
  rule expect
    'expect' parens to match_statement numbers
  end

  rule parens
    S '(' parens ')' S / word
  end

  rule word
    [a-zA-Z]+
  end

  rule S
    [ \t]*
  end

  rule to
    ('not')? S 'to' S
  end

  rule be
    'be'?
  end

  rule match_statement
    S be S matcher ' '
  end

  rule matcher
    'equal'
  end

  rule numbers
    [0-9]+
  end

  rule problems
    word &{ |s| binding.pry; true }
  end
end
